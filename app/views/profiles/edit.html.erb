<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Edit Profile</h1>
    </div>
  </div>

  <%= form_with model: @profile, url: user_profile_path(@user), local: true, html: { multipart: true } do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card shadow-sm" style="background: var(--app-body-bg); border: none; color: var(--app-text-color);">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <div class="text-center">
                  <h4 class="card-title mb-3">Profile Picture</h4>
                  <div class="mb-3">
                    <% if @profile.avatar.attached? %>
                      <%= image_tag @profile.avatar, class: "img-fluid rounded-circle mb-3", style: "width: 150px; height: 150px; object-fit: cover;" %>
                    <% else %>
                       <div class="bg-secondary rounded-circle d-inline-block mb-3" style="width: 150px; height: 150px; display: flex; align-items: center; justify-content: center; color: white;">
                        <span class="h1 m-0"><%= @profile.first_name.first if @profile.first_name.present? %></span>
                      </div>
                    <% end %>
                  </div>
                  <div class="input-group mb-3">
                     <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;">
                       <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                       </svg>
                     </span>
                     <%= f.file_field :avatar, class: 'form-control', style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <h4 class="card-title mb-4">Profile Details</h4>
                <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :first_name, class: "form-label fw-bold" %>
                <div class="input-group">
                   <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></span>
                   <%= f.text_field :first_name, class: 'form-control', style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
                </div>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name, class: "form-label fw-bold" %>
                <div class="input-group">
                   <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></span>
                   <%= f.text_field :last_name, class: 'form-control', style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :job_title, class: "form-label fw-bold" %>
              <div class="input-group">
                 <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></span>
                 <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control form-select', style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :phone_number, class: "form-label fw-bold" %>
              <div class="input-group">
                 <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></span>
                 <%= f.text_field :phone_number, class: 'form-control', style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :contact_email, class: "form-label fw-bold" %>
              <div class="input-group">
                 <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></span>
                 <%= f.text_field :contact_email, class: 'form-control', style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :description, class: "form-label fw-bold" %>
              <div class="input-group">
                 <span class="input-group-text" style="background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></span>
                 <%= f.text_area :description, class: 'form-control', rows: 4, style: "background: var(--app-input-bg); color: var(--app-text-color); border-color: #999;" %>
              </div>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Update Profile", class: 'btn btn-primary btn-lg' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  <% end %>
</div>