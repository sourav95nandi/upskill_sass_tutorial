<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header">
      <h3>Message Details</h3>
    </div>
    <div class="card-body">
      <p><strong>Name:</strong> <%= @contact.name %></p>
      <p><strong>Email:</strong> <%= @contact.email %></p>
      <p><strong>Date:</strong> <%= @contact.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <hr>
      <p class="card-text"><%= @contact.message %></p>
    </div>
    <div class="card-footer">
      <%= link_to 'Back', contacts_path, class: 'btn btn-secondary' %>
      <%= link_to 'Edit', edit_contact_path(@contact), class: 'btn btn-primary' %>
      <%= link_to 'Delete', contact_path(@contact), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>