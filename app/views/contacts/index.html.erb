<div class="container mt-5">
  <h1 class="text-center mb-4">Messages</h1>
  <div class="well shadow-sm rounded-3 messages-container">
    <div class="table-responsive messages-table-container">
      <table class="table table-hover mb-0">
        <thead class="sticky-top-header">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Message</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr style="cursor: pointer;" onclick="window.location='<%= contact_path(contact) %>'">
              <td class="fw-bold"><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td class="text-truncate message-truncate"><%= contact.message %></td>
              <td><%= contact.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>